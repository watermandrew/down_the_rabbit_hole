{
  "manifest_version": 2,
  "name": "StalkerMode",
  "version": "1.0",


  "content_scripts" : [
    {
    "matches" : ["http://*/*"],
    "js" : ["fb.js"]
  }
],

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://ajax.googleapis.com/"
  ]
}
